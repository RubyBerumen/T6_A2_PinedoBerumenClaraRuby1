<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_boton_agregar"
        android:layout_width="128dp"
        android:layout_height="91dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="84dp"
        android:onClick="abrir_Activitis"
        android:text="Agregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btn_modificar"
        android:layout_width="127dp"
        android:layout_height="85dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:onClick="abrir_Activitis"
        android:text="Modificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_boton_agregar" />

    <Button
        android:id="@+id/btn_consultas"
        android:layout_width="125dp"
        android:layout_height="88dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="56dp"
        android:onClick="abrir_Activitis"
        android:text="Consultar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_eliminar" />

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="126dp"
        android:layout_height="92dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="56dp"
        android:onClick="abrir_Activitis"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="136dp"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_modificar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="93dp"
        android:layout_height="87dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>